    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "es2016",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}